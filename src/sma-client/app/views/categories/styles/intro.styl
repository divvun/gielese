#frontPage
    background-color: #FFF

    a#goBack
        position: fixed
        bottom: 5px
        right: 15px
        opacity: .6
        z-index: 5

    #main_page_header, #main_page_content
        max-width: 450px

    #main_page_header

        margin: 0 auto 0 auto
        padding: 0 0 10px 0
        // border-bottom: 1px solid #CCC
        width: 100%
        display: block

    #main_page_content
        margin: 0 auto 0 auto
        display: block
        background-color: #eee
        padding: 5px 8px
        border-radius: 5px

    img#logo
        width: 60%
        margin-left: 4em

    h1
        font-family: "Kaushan Script", "Bello Pro", "Bello-Pro"
        margin: 0 auto
        position: relative
        width: 100%
        text-align: center
        font-size: 350%
        -webkit-transform: rotate(-5deg)
        color: #EEEEEE
        text-shadow: 0 0 3px #000

    p
        font-family: "Open Sans", sans-serif

    p.lead
        font-size: 110%
        margin-top: .25em
        margin-bottom: .25em
        line-height: 1.3em
        font-weight: 400
        padding: 2px
        text-align: justify
        letter-spacing: -1px

    p.help
        font-size: 90%
        line-height: 1.2em
        font-weight: normal
        margin-left: .5em
        margin-right: .5em
        margin-bottom: 0

    .question_block
        div[data-role="fieldcontain"]
            margin-top: 0

        legend
            font-family: "Open Sans", sans-serif
            font-weight: 700
            font-size: 85%

        label
            font-family: "Open Sans", sans-serif
            font-weight: 300
            font-size: 125%

        h2.legend
            font-family: "Open Sans", sans-serif
            font-weight: 300
            margin-bottom: .25em
            margin-top: 0

    .front_page_nav
        margin-top: .75em

        #next
            float: right

    form#user
        fieldset legend
            font-size: 85%

        input.error
            border-color: #900
            outline: none
            color: #900
        span.error
            color: #900
            font-weight: bold

    #progressbar
        height: 1.25em

    @media only screen and (min-width: 399px)
        p.help
            font-size: 12pt
            line-height: 1.3em

    @media only screen and (min-width: 500px)
        p.help
            font-size: 14pt
            line-height: 1.5em
