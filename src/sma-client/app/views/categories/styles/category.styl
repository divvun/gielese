#category_view

    #category_content, #main_menu
        position: relative
        display: block
        width: 100%
        top: 0px
        margin: 0 0 0 0
        padding: 0 0 0 0

    #category_background
        position: relative
        display: block
        height: 400px
        width: 100%
        background-position: center
        background-repeat: no-repeat
        background-size: cover !important

    #subcategory_buttons
        display: block
        width: 100%
        padding-top: 35%
        margin-left: 20px
        top: 0px
        position: fixed

    #category_buttons
        display: block
        position: fixed
        bottom: 0
        right: 0
        width: 45%
        // background-color: rgba(255, 255, 255, .8)
        // border-radius: 15px 0 0 0

        .category_name
            margin: 0 .5em 0 0
            text-indent: 0
            padding: 0 0 0 0
            font-family: "Open Sans"
            font-weight: 400
            font-size: 200%
            text-transform: lowercase
            text-align: right
            width: 80%
            color: #FFF
            text-shadow: 2px 0px 2px #222, -2px 0px 2px #222, 0px 2px 2px #222, 0px -2px 2px #222

    ul.aajege-buttons
        position: relative
        right: 5px
        list-style-type: none
        margin: 0 0 0 0
        padding: 0 0 0 0
        width: 100%

        a
            display: block

            padding: 5px 17px
            margin-bottom: 15px

            background-color: #555
            border-radius: 12px
            width: 100%

            letter-spacing: 1px
            font-size: 150%
            font-family: "Open Sans"
            font-weight: 100
            color: #FFF
            text-shadow: 0px 0px 2px #000
            box-shadow: 0px 0px 3px #CCC

@media only screen and (max-width: 320px)
    #category_view #category_buttons
        width: 55% !important

        .ui-btn-text
            font-size: 11pt !important
