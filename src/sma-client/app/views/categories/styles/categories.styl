#main_menu_content
    display: block
    padding: 0 5px 0 5px
    margin: 2em 5px 0 5px

#category_links, #subcategory_buttons, .category_buttons

    display: block
    margin: 0 auto
    margin-top: .5em

    a.square
        position: relative
        display: block
        width: 90px
        height: 90px
        margin-bottom: 20px
        border-radius: 15px
        color: #333
        background-color: #DDD
        text-align: center
        text-decoration: none
        // border: 1px solid #888
        box-shadow: 1px 1px 2px #111

        span.link_word
            position: absolute
            bottom: 0px

            display: block

            width: 100%
            height: 1.3em
            line-height: 1.3em

            background-color: rgba(100,100,100,.8)
            color: #FFF
            border-radius: 0 0 15px 15px

            font-size: 115%
            font-weight: 300
            letter-spacing: .5px
            text-shadow: none
            box-shadow: none

        span.link_image
            display: block
            position: absolute
            float: left
            border-radius: 15px
            width: 90px
            height: 90px
            background-color: #444
            background-size: 100% 100%
            background-position: center
            opacity: .9

    a.square.grayed .link_image
        opacity: .1

@media only screen and (max-width: 320px)
    #category_links, #subcategory_buttons, .category_buttons
        width: 310px

    a.square, span.link_image
        width: 90px !important
        height: 90px !important

    span.link_word
        font-size: 11pt !important

@media only screen and (min-width: 400px)
    #category_links, #subcategory_buttons, .category_buttons
        width: 395px

    a.square, span.link_image
        width: 110px !important
        height: 110px !important

@media only screen and (min-width: 500px)
    #category_links, #subcategory_buttons, .category_buttons
        width: 500px

    a.square, span.link_image
        width: 150px !important
        height: 150px !important

@media only screen and (min-width: 767px)

    span.link_word
        height: 1.5em !important
        line-height: 1.5em !important
        font-size: 130% !important
