#frontPage
    background-color: #FFF

    #create_account
        margin-top: 0
        padding-top: 0

    [data-mini="true"]
        label
            line-height: 1.5em
            padding-bottom: 10px
            height: 40px

            .ui-btn-inner
                height: 40px
                line-height: 1.5em

                .ui-btn-text
                    margin-top: 10px

    h1
        font-family: "Kaushan Script", "Bello Pro", "Bello-Pro"
        margin: 0 auto
        position: relative
        width: 100%
        text-align: center
        font-size: 350%
        -webkit-transform: rotate(-5deg)
        color: #EEEEEE
        text-shadow: 0 0 3px #000

    .legend
        font-weight: 100
        margin-bottom: .25em
        margin-top: .25em

    .smaller
        .legend
            font-size: 110%

    #end
        display: block
        position:relative
        width: 100%
        margin-top: 1em

        a
            margin: 0 0 0 auto
            

    p
        font-family: "Open Sans", sans-serif

    p.lead
        font-size: 110%
        margin-top: .25em
        margin-bottom: .25em
        line-height: 1.3em
        font-weight: 400
        padding: 2px
        text-align: justify
        letter-spacing: -1px

    p.help
        font-size: 90%
        line-height: 1.2em
        font-weight: normal
        margin-left: .5em
        margin-right: .5em
        margin-bottom: 0

    .question_block
        h2.legend
            font-family: "Open Sans", sans-serif
            font-weight: 300
            margin-bottom: .25em
            margin-top: 0

    .front_page_nav
        margin-top: .75em

        #next
            float: right

    form#user
        input.error
            border-color: #900
            outline: none
            color: #900
        span.error
            color: #900
            font-weight: bold

