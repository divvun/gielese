#concept_view

    .success-rate-green
        border-left: 5px solid #090

    .success-rate-yellow
        border-left: 5px solid #EBD800

    .success-rate-orange
        border-left: 5px solid #EB7100

    .success-rate-red
        border-left: 5px solid #EB0000

    #concepts_content

        display: block
        position: relative
        padding: 15px 0 0 0
        height: 400px

        #nav_buttons
            display: block
            width: 100%
            margin: 2em auto 0 auto

            a
                position: relative
                display: block
                margin: 0 auto
                padding: 0 0 0 0
                height: 40px
                width: 40px
                list-style-type: none

    #concept_content_block
        display: block
        position: relative
        height: 100%

    #concept_content_block.twothirds 
        height: 100%

        .left-block
            position: relative
            display: block
            width: 60%
            height: 100%
    
        .right-block
            position: relative
            display: block
            width: 40%
            height: 100%

    #concept_content
        display: block
        position: relative
        width: 60%
        margin: 0 auto

        h2.concept_value
            display: block
            width: 100%
            font-family: "Open Sans"
            font-weight: 500
            line-height: 1.2em
            font-size: 130%
            text-align: center

            margin-bottom: .5em

            padding: 5px 0px
            color: #FFF !important
            background-color: #444
            border-radius: 25px
            text-shadow: none
            font-weight: 100
    
    .scroll-arrow
        position: fixed
        display: block
        bottom: 5px
        right: 15px
        height: 20px
        width: 20px

        i
            display: block
            height: 20px
            width: 20px
            position: absolute

    ul#concept_list
        overflow-y: scroll
        position: absolute
        display: block
        top: 0px
        right: 0em
        height: 99%
        width: 100% !important
        background-color: transparent
    
        .concept_link
            font-family: "Open Sans"
    
        li.concept_item h2
            margin-left: 0
            padding-left: 0
            font-weight: 100
            font-family: "Open Sans", sans-serif
            font-size: 125%
    
            border: none
    
        .ui-btn-inner, a.ui-link-inherit
            margin-left: 0
            margin-right: 0
            padding-left: 2px
            padding-right: 10px
    
        .ui-btn-up-d, .ui-btn-hover-d
            border: none
    
        .ui-btn-active-d a.concept_link
            background-color: #CCC !important
    
    #current_concept_img
        margin: 0 auto
        display: block
        border-radius: 25px
        border: 1px solid #333
        box-shadow: 1px 1px 5px #999
        background-position: cover
        background-repeat: no-repeat
        background-size: 100% 100%
        overflow: hidden
        box-sizing: border-box
        width: 40%
        padding: 40%

        img
            overflow: hidden
    
    span.error
        font-size: 80%
        color: #900
    
    ul#concept_definitions
    
        display: block
        margin: 0 auto
        margin-top: 2em
        padding-left: 0
        list-style-type: none
        width: 80%
    
        li
            list-style-type: none
            margin: 0 auto
            line-height: 1.2em
    
    @media only screen and (max-width: 390px)
    
        #concept_list
            width: 40%
    
            .concept_link
                font-family: "Open Sans"
                font-weight: 400
    
    // @media only screen and (min-width: 400px)
    
    @media only screen and (min-width: 500px)

        h2.concept_definition
            font-weight: 300
            font-size: 230%
    
        ul#concept_list
            .concept_link
                font-size: 150%
                font-weight: 500
                font-family: "Open Sans"
