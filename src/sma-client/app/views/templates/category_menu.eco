<div data-role="header">
    <a href="#options" data-transition="slide" id="show-panel" data-icon="gear"><%- gettext.gettext "Options" %></a>
    <h1>Buerie biejjie!</h1>
    <% if app.user: %>
    <a href="#stats" id="userinfo_button" data-transition="slide" id="show-panel" data-icon="gear">
        <span class="action"></span>
        <span class="user"> <%- app.user.username %> </span>
    </a>
    <% else: %>
    <a href="#" id="login_button"  data-transition="slide" id="show-panel" data-icon="grid">
        <span class="action"><%- gettext.gettext "Log in" %></span>
        <span class="user"></span>
    </a>
    <% end %>
</div> 

<div data-role="content">
    <h2 class="heading" data-role="list-divider"><%- gettext.gettext "Categories" %></h2>

    <div id="main_menu">

        <div class="ui-grid-b">
	        <div class="ui-block-a">
                <a class="square" href="#category/BODYPART" data-transition="slide">
                    <% if app.conceptdb.titleImages("BODYPART"): %>
                        <% background_img = app.conceptdb.titleImages("BODYPART")[0].path %>
	                    <span class="link_image" style="background-image: url('<%- background_img %>')"></span>
	                <% else: %>
	                    <span class="link_image"></span>
	                <% end %>
	                <span class="link_word"><%- gettext.gettext "Face" %></span>
	            </a>
	        </div>
	        <div class="ui-block-b">
                <a class="square" href="#category/GREETINGS" data-transition="slide">
                    <% if app.conceptdb.titleImages("GREETINGS"): %>
                        <% background_img = app.conceptdb.titleImages("GREETINGS")[0].path %>
	                    <span class="link_image" style="background-image: url('<%- background_img %>')"></span>
	                <% else: %>
	                    <span class="link_image"></span>
	                <% end %>
	                <span class="link_word"><%- gettext.gettext "Greetings" %></span>
	            </a>
	        </div>	   
	        <div class="ui-block-c">
                <a class="square" href="#category/FOOD" data-transition="slide">
                    <% if app.conceptdb.titleImages("FOOD"): %>
                        <% background_img = app.conceptdb.titleImages("FOOD")[0].path %>
	                    <span class="link_image" style="background-image: url('<%- background_img %>')"></span>
	                <% else: %>
	                    <span class="link_image"></span>
	                <% end %>
	                <span class="link_word">Food</span>
	            </a>
	        </div>
        </div>

