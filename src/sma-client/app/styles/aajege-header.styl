border-image()
    -webkit-border-image: arguments /* Safari 5 */
    -o-border-image: arguments /* Opera */
    border-image: arguments

heavy-text-shadow(color)
    text-shadow: 2px 0px 2px color, 
        -2px 0px 2px color, 
        0px 2px 2px color, 
        0px -2px 2px color


.aajege-header
    position: relative
    top: 0px
    padding: 0 0 2px 0
    margin: 0 0 0 0

    display: block
    height: 100px

    width: 100%

    background-color: #F5D990
    border-image: url("/static/images/icons/flette.png") 0 0 14 0 round

    border-bottom: 12px solid transparent

    h2 
        width: 100%
        text-align: center
        position: absolute
        top: 0
        left: 0
        font-weight: 100
        font-size: 200%
        col = 70
        color: rgba(col, col+20, col, 1)

    hr.aajege-flette
        display: block
        position: relative
        bottom: 0px

        height: 12px
        width: 100%

        background-image: url("/static/images/icons/flette.png")
        background-position: center

    .aajege-nav
        margin: 0 0 0 0
        padding: 0 0 0 0
        list-style-type: none
        z-index: 5

        li
            margin: 0 0 0 0
            list-style-type: none
            float: left
            width: 74px
            height: 70px
            border-radius: 5px
            padding-bottom: 5px

            a
                display: block
                height: 74px
                width: 74px

            a .label
                position: absolute
                bottom: 0px
                margin-bottom: -14px
                width: 100%
                text-shadow: none
                text-align: center
                color: #333
                heavy-text-shadow(#eee)
                opacity: .8

        li.shadow
            box-shadow: 1px 1px 1px #000

    .aajege-nav-left
        position: absolute
        top: 0px
        left: 2px

    .aajege-nav-right
        position: absolute
        top: 0px
        right: 6px


// but don't shrink on iPad: 768 x 927
// TODO: @media only screen and (max: 766px)
.aajege-header-shrinkable

    height: 62px
    padding-top: 8px

    .aajege-nav
        margin-top: 2px

        li, li a
            height: 38px
            width: 32px

            .label
                display: none
    h2 
        position: absolute
        text-align: center
        font-size: 150%
        margin: 0 0 0 0
        margin-top: .33em
        letter-spacing: 1px


