.aajege-header
    position: relative
    top: 0px

    display: block
    height: 100px

    width: 100%

    -webkit-border-image: url("/static/images/icons/flette.png") 0 0 14 0 round; /* Safari 5 */
    -o-border-image: url("/static/images/icons/flette.png") 0 0 14 0 round; /* Opera */
    border-image: url("/static/images/icons/flette.png") 0 0 14 0 round;
    border-bottom: 12px solid transparent

    hr.aajege-flette
        display: block
        position: relative
        bottom: 0px

        height: 12px
        width: 100%

        background-image: url("/static/images/icons/flette.png")
        background-position: center

    .aajege-nav
        margin: 0 0 0 0
        padding: 0 0 0 0
        list-style-type: none

        li
            margin: 0 0 0 0
            list-style-type: none
            float: left
            width: 74px
            height: 74px
            border-radius: 5px


            a .label
                position: absolute
                bottom: 0px
                width: 100%
                text-shadow: none
                text-align: center
                color: #FFF
                heavy-text-shadow()

        li.shadow
            box-shadow: 1px 1px 1px #000

    .aajege-nav-left
        position: absolute
        top: 2px
        left: 2px

    .aajege-nav-right
        position: absolute
        top: 2px
        right: 2px

