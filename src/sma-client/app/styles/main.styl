
span.word_concept
    font-size: 120%
    text-decoration: None
    background-color: #DDD
    color: #33A
    padding: 4px

.question_prompt .word_concept
    font-size: 160%
    margin-left: 1.5em

a.answerlink
    text-decoration: None

a.answerlink.correct
    color: #3A3
    background-color: #3F3
    display: block
    width: 100%
    height: 100%

    .concept.img_concept
      border: 1px solid #393
      opacity: .8

    .concept.word_concept
      background-color: #ACA
      color: #151
      

a.answerlink.correct:after
    content: "  Correct!"

a.answerlink.incorrect
    color: #3A3
    background-color: #DFD

    .concept.img_concept
      border: 1px solid #FDD
      opacity: .8

    .concept.word_concept
      background-color: #A77
      color: #311
      

a.answerlink.incorrect:after
    content: " Incorrect!"
    background-color: transparent



