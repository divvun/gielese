    background-gradient()

#category_games
    background-position: center
    background-repeat: no-repeat
    background-size: cover !important

    #category_content
        position: fixed
        bottom: 0
        right: 0
        width: 40%
        background-color: rgba(255, 255, 255, .8)
        border-radius: 15px 0 0 0

    .category_name
        font-family: "Open Sans"
        font-weight: 100
        font-size: 170%
        text-transform: lowercase
        width: 80%

