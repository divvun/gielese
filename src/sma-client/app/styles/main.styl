h2.heading
    font-family: "Open Sans", sans-serif
    font-weight: 400
    margin-top: .5em
    margin-bottom: .75em

#main_menu

    display: block
    margin: 0 auto
    margin-top: .5em

    a.square
        position: relative
        display: block
        width: 90px
        height: 90px
        margin-bottom: 20px
        border-radius: 15px
        color: #333
        background-color: #DDD
        text-align: center
        text-decoration: none
        // border: 1px solid #888
        box-shadow: 1px 1px 2px #111

        span.link_word
            position: absolute
            bottom: 0px

            display: block

            width: 100%
            height: 1.3em
            line-height: 1.3em

            background-color: rgba(100,100,100,.7)
            color: #FFF
            border-radius: 0 0 15px 15px

            font-size: 115%
            font-weight: 300
            letter-spacing: .5px
            text-shadow: none
            box-shadow: none

        span.link_image
            display: block
            position: absolute
            float: left
            border-radius: 15px
            width: 90px
            height: 90px
            background-image: url(http://placekitten.com/g/90/90)
            background-position: center
            -khtml-opacity: .50
            -moz-opacity: .50
            opacity: .4

