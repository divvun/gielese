#loading_float
    z-index: 5
    position: fixed
    bottom: 10px
    left: 5px
    opacity: .9

    #status
        font-size: 80%

span.word_concept
    font-size: 120%
    text-decoration: None

.img_concept
    width: 150px
    height: 150px

h2.heading
    font-family: "Open Sans", sans-serif
    font-weight: 400
    margin-top: .5em
    margin-bottom: .75em

#main_menu

    a.square
        display: block
        width: 90px
        height: 90px
        border-radius: 15px
        background-color: #DFD
        color: #333
        text-align: center
        text-decoration: none
        border: 1px ridge #bbb

        span.link_word
            display: block
            height: 1em
            width: 100%
            margin-top: 2em
            vertical-align: middle
            -webkit-transform: rotate(-5deg)
            font-size: 115%
            color: #111

        span.link_image
            display: block
            position: absolute
            float: left
            border-radius: 15px
            width: 90px
            height: 90px
            background-image: url(http://placekitten.com/g/90/90)
            -khtml-opacity: .50
            -moz-opacity: .50
            opacity: .1
            // -ms-filter: "alpha(opacity=50)"
            // filter: alpha(opacity=50)
            // filter: progid:DXImageTransform.Microsoft.Alpha(opacity=0.5)

#points_for_question
    padding: 0 0 0 0
    position: fixed
    bottom: 50px
    right: 50px
    width: 50px
    height: 50px
    background-color: #4C4
    border-radius: 90px
    display: block
    vertical-align: center
    text-align: center
    text-indent: none;

    .points

        color: #FFF
        font-weight: 300
        font-size: 22px
        letter-spacing: 0px
        line-height: 50px
        margin: 0 0 0 0
        padding: 0 0 0 0
        width: 48px
        text-align: center
        display: block
        text-shadow: none;

