html, body, .ui-page
    background-color: #FFF !important

.upper-left-bubble, .lower-left-bubble
    position: fixed

    background-color: rgba(255, 255, 255, 0.69)
    text-align: center

    border-radius: 50%
    padding: 15px

    width: 90px
    height: 90px
    color: #525252 !important
    text-shadow: none !important
    font-size: 120%

    text-indent: 25px
    line-height: 70px
    font-weight: lighter !important
    letter-spacing: 1px !important

.invert-bubble
    background-color: rgba(52, 52, 52, .7) !important
    color: rgba(255, 255, 255, 1) !important

.upper-left-bubble
    top: -35px
    left: -35px

.lower-left-bubble
    bottom: 0
    left: -17px

#loading_float
    z-index: 5
    position: fixed
    bottom: 10px
    left: 5px
    opacity: .9

    #status
        font-size: 80%

