h2.heading
    font-family: "Open Sans", sans-serif
    font-weight: 400
    margin-top: .5em
    margin-bottom: .75em

#main_menu

    a.square
        display: block
        width: 90px
        height: 90px
        margin-bottom: 20px
        border-radius: 15px
        color: #333
        background-color: #DDD
        text-align: center
        text-decoration: none
        border: 1px ridge #bbb

        span.link_word
            display: block
            height: 1em
            width: 100%
            margin-top: 2em
            vertical-align: middle
            -webkit-transform: rotate(-5deg)
            font-size: 115%
            color: #111

        span.link_image
            display: block
            position: absolute
            float: left
            border-radius: 15px
            width: 90px
            height: 90px
            background-image: url(http://placekitten.com/g/90/90)
            background-position: center
            -khtml-opacity: .50
            -moz-opacity: .50
            opacity: .4

#category_games
    background-position: center
    background-repeat: no-repeat
    background-size: cover !important

    #category_content
        position: fixed
        bottom: 0
        right: 0
        width: 40%
        background-color: rgba(255, 255, 255, .8)
        border-radius: 15px 0 0 0

    .category_name
        font-family: "Open Sans"
        font-weight: 100
        font-size: 170%
        text-transform: lowercase
        width: 80%

#global_options
    .ui-content h2
        margin-top: .25em
        margin-bottom: .25em
        font-weight: 300
        font-family: "Open Sans"
    .heading
        font-weight: 500
        font-family: "Open Sans"

label
