#concept_content
    margin: 0 auto

li.concept_item h2
    font-weight: 200
    font-family: "Open Sans", sans-serif
    font-size: 125%

#concept-list
    width: 10em

#concept_list_view.twothirds ui-block-a
    width: 60% !important

#concept_list_view.twothirds ui-block-b
    width: 40% !important

#concept_list_view.twothirds ul#concept-list
    height: 100%
    overflow-y: scroll
    position: fixed
    display: block
    top: 4em
    right: 0em

#current_concept_img
    margin: 0 auto
    display: block
    border-radius: 15px
    border: 1px solid #FFF

h2.concept_value
    font-family: "Open Sans"
    font-family: 500

h2.concept_definition
    font-family: "Open Sans"
    font-weight: 300

ul#concept_definitions

    list-style-type: none

    li
        list-style-type: none
        margin: 0 0
        line-height: 1.2em
