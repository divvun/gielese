hr
    margin-bottom: .5em
    margin-top: .25em

.question_type h3
    font-weight: lighter
    font-size: 140%
    margin-bottom: 0

span.question_level
    float: right
    display: block
    border-radius: 90px
    background-color: #ccc
    color: #000

.possible_answers 
    position: relative

    .ui-body, .ui-bar
        padding: 0

    .ui-btn-inner
        padding-left: 0
        padding-right: 0

    .usr_msg
        display: block
        position: relative
        top: -60px
        left: 20px
        height: 0px
        text-decoration: none
        z-index: 5
        font-weight: bold

    .usr_msg.correct
        color: #3A3

    .usr_msg.incorrect
        color: #A33


.post_game_buttons
    position: relative
    float: right
    right: 10px

.question_prompt 
    display: block
    height: 100%
    width: 100%
    margin: 2em auto 0
    font-family: "Open Sans"

    img.img_concept
        margin: 0 auto
        width: 300px
        height: 300px

    .word_concept
        font-size: 170%
        display: block
        margin: auto 0
        margin-bottom: 1em
        text-align: center
        background-color: #444
        border-radius: 25px
        text-shadow: none
        color: #FFF
        font-weight: lighter

