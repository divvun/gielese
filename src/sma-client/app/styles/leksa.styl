.question_type h3
    font-weight: lighter
    font-size: 140%
    margin-bottom: 0

span.question_level
    float: right
    display: block
    border-radius: 90px
    background-color: #ccc
    color: #000

.possible_answers 
    position: relative

    .ui-body, .ui-bar
        padding: 0

    .ui-btn-inner
        padding-left: 0
        padding-right: 0

    .usr_msg
        display: block
        position: relative
        top: -60px
        left: 20px
        height: 0px
        text-decoration: none
        z-index: 5
        font-weight: bold

    .usr_msg.correct
        color: #3A3

    .usr_msg.incorrect
        color: #A33


.post_game_buttons
    position: relative
    float: right
    right: 10px

.question_prompt 
    display: block
    height: 100%
    width: 100%
    margin: 0 auto

    img
        margin: 0 auto

    .word_concept
        font-size: 170%
        margin-left: 1.5em
        display: block
        margin: auto 0
        width: 100%

    #question_play
        float: right
        text-decoration: none
        position: relative
        font-weight: lighter

        img
            opacity: .7

a.answerlink
    text-decoration: None

    .img_concept
        width: 150px
        height: 150px
        padding-bottom: 1em

a.answerlink.correct
    color: #3A3
    display: block
    width: 100%
    height: 100%

    .tint
      background-color: #090
      display: block
      width: 150px
      height: 150px

    .concept.img_concept
      opacity: .7

    .concept.word_concept
      color: #151

// a.answerlink.correct:after
//     content: "  Correct!"

a.answerlink.incorrect
    color: #A33
    display: block
    width: 100%
    height: 100%

    .tint
      background-color: #900
      display: block
      width: 150px
      height: 150px

    .concept.img_concept
      opacity: .5

    .concept.word_concept
      color: #311
      
