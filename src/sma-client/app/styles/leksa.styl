.word_to_image
    .question_prompt
        margin: .5em 0 0 0

    #question_play
        margin: 0 0 0 0
        padding: 0 0 0 0


#question_play
    display: block
    width: 100%
    position: relative
    z-index: 5

    text-decoration: none
    font-weight: lighter
    padding: 10px
    text-align: center

    img
        margin: 0 auto
        opacity: .8

a.answerlink
    text-decoration: None
    display: block


// a.answerlink.correct:after
