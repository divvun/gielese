#progress_container
    display: block
    margin-top: .25em
    position: relative

    div 
        height: 1em
        background-color: transparent

    #leksa_progress
        position: relative
        top: -1.15em

        .ui-progressbar-value
            background-color: #933

        .progress_label
            display: block
            float: right
            text-shadow: 0 0 3px #FFF
            font-size: 80%
            margin-right: .5em

    
    #leksa_progress_indiv
        position: relative
        top: 0em

        .ui-progressbar-value
            background-color: #339

