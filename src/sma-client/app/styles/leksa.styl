ul.image-grid
    display: block
    
    margin: 0 0 0 0
    padding: 0 0 0 0

    width: 300px
    height: 300px

    list-style-type: none

    li.image-item

        display: block
        float: left

        width: 130px
        height: 150px

        img
            position: relative
            vertical-align: center

.image_set 

    display: block
    margin: 0 auto

    a.answerlink
        width: 150px
        height: 150px
        padding-bottom: 1em
        margin: 0 auto

    .tint img
        display: block
        width: 150px
        height: 150px

    .correct
        color: #3A3

        .tint img
          background-color: #090

        .concept
          opacity: 1


    .incorrect
        color: #A33

        .tint img
          background-color: #900

        .concept
          opacity: 1

.word_to_image
    .image-grid
        img
            border: 4px double #555
            border-radius: 15px

        .correct img
            border: 4px solid #090

        .incorrect img
            border: 4px solid #900


.word_set

    // background shading
    .answerlink.incorrect .ui-btn-inner
        background-color: rgba(170, 51, 51, 0.7)

    .answerlink.correct .ui-btn-inner
        background-color: rgba(51, 170, 51, 0.7)

    .correct
        color: #3A3

        .concept
          color: #151

    .incorrect
        color: #A33

        .concept
          color: #311
      
