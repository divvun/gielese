#progress_container
    display: block
    margin-top: .25em
    position: fixed
    bottom: 10px
    width: 100%

    div 
        height: 1em
        background-color: transparent

    .progress_label
        display: none
        float: right
        text-shadow: 0 0 3px #FFF
        font-size: 80%
        margin-right: .5em

    #leksa_progress
        position: relative
        top: -1.15em

        .ui-progressbar-value
            background-color: #933

    #leksa_progress_indiv
        position: relative
        top: 0em

        .ui-progressbar-value
            background-color: #339


