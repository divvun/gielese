#frontPage

    background-image: linear-gradient(0 30, rgb(5,78,166) 9%, rgb(195,203,224) 55%, rgb(164,196,196) 78%)
    background-image: -o-linear-gradient(0 30, rgb(5,78,166) 9%, rgb(195,203,224) 55%, rgb(164,196,196) 78%)
    background-image: -moz-linear-gradient(0 30, rgb(5,78,166) 9%, rgb(195,203,224) 55%, rgb(164,196,196) 78%)
    background-image: -webkit-linear-gradient(0 30, rgb(5,78,166) 9%, rgb(195,203,224) 55%, rgb(164,196,196) 78%)
    background-image: -ms-linear-gradient(0 30, rgb(5,78,166) 9%, rgb(195,203,224) 55%, rgb(164,196,196) 78%)

    background-image: -webkit-gradient(
	    linear, 0 30, 40 bottom, color-stop(0.09, rgb(5,78,166)), color-stop(0.55,
	    rgb(195,203,224)), color-stop(0.78, rgb(164,196,196))
    )

    #main_page_header

        margin: 0 0 0 0
        padding: 0 0 10px 0 
        // border-bottom: 1px solid #CCC
        width: 100%

    #main_page_content
        background-color: rgba(238, 238, 238, 0.68)
        padding: 5px 8px
        border-radius: 5px

    h1
        font-family: "Kaushan Script", "Bello Pro", "Bello-Pro"
        margin: 0 auto
        position: relative
        width: 100%
        text-align: center
        font-size: 350%
        -webkit-transform: rotate(-5deg)
        color: #EEEEEE
        text-shadow: 0 0 3px #000

    p 
        font-family: "Open Sans", sans-serif

    p.lead
        font-size: 110%
        margin-top: .25em
        margin-bottom: .25em
        line-height: 1.3em
        font-weight: 400
        padding: 2px
        text-align: justify
        letter-spacing: -1px

    p.help
        font-size: 90%
        line-height: 1.2em
        font-weight: normal
        margin-left: .5em
        margin-right: .5em
        margin-bottom: 0

    .question_block 
        div[data-role="fieldcontain"]
            margin-top: 0

        legend
            font-family: "Open Sans", sans-serif
            font-weight: 700
            font-size: 85%

        label
            font-family: "Open Sans", sans-serif
            font-weight: 300
            font-size: 125%

    .front_page_nav
        margin-top: .75em

        #next
            float: right

    form#user
        fieldset legend
            font-size: 85%

        input.error
            border-color: #900
            outline: none
            color: #900
        span.error
            color: #900
            font-weight: bold

            
    #progressbar
        height: 1.25em
