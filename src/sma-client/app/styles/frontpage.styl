#frontPage

    background-image: linear-gradient(0 30, rgb(5,78,166) 9%, rgb(195,203,224) 55%, rgb(164,196,196) 78%)
    background-image: -o-linear-gradient(0 30, rgb(5,78,166) 9%, rgb(195,203,224) 55%, rgb(164,196,196) 78%)
    background-image: -moz-linear-gradient(0 30, rgb(5,78,166) 9%, rgb(195,203,224) 55%, rgb(164,196,196) 78%)
    background-image: -webkit-linear-gradient(0 30, rgb(5,78,166) 9%, rgb(195,203,224) 55%, rgb(164,196,196) 78%)
    background-image: -ms-linear-gradient(0 30, rgb(5,78,166) 9%, rgb(195,203,224) 55%, rgb(164,196,196) 78%)

